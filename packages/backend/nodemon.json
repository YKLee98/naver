{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    ".ignored_node_modules",
    "dist",
    "logs",
    "coverage",
    ".git",
    ".cache",
    "tmp",
    "temp"
  ],
  "exec": "tsx",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000
}