{
  "name": "@hallyu/backend",
  "version": "1.0.0",
  "description": "Hallyu-Pomaholic Sync System Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "start": "node -r ./dist/tsconfig-paths-bootstrap.js dist/server.js",
    "start:prod": "NODE_ENV=production npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/migrate.ts",
    "sync-check": "ts-node -r tsconfig-paths/register src/scripts/sync-check.ts",
    "seed:admin": "ts-node src/scripts/seedAdmin.ts"
  },
  "dependencies": {
    "@shopify/shopify-api": "^8.1.1",
    "@types/bull": "^4.10.4",
    "axios": "^1.6.5",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.0.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "rate-limiter-flexible": "^5.0.0",
    "socket.io": "^4.6.0",
    "string-similarity": "^4.0.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-validator": "^3.0.2",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/string-similarity": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
