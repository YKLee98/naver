{
  "name": "hallyu-fomaholic-sync",
  "version": "1.0.0",
  "description": "Shopify-Naver Smart Store Real-time Sync System",
  "author": "YUKYUNG <math.makes.you.free@gmail.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel -r dev",
    "dev:frontend": "pnpm --filter @hallyu/frontend dev",
    "dev:backend": "pnpm --filter @hallyu/backend dev",
    "build": "pnpm run -r build",
    "build:frontend": "pnpm --filter @hallyu/frontend build",
    "build:backend": "pnpm --filter @hallyu/backend build",
    "start": "pnpm --filter @hallyu/backend start",
    "test": "pnpm run -r test",
    "lint": "pnpm run -r lint",
    "lint:fix": "pnpm run -r lint:fix",
    "type-check": "pnpm run -r type-check",
    "clean": "pnpm run -r clean && rimraf node_modules .pnpm-store",
    "clean:cache": "pnpm store prune && pnpm run -r clean",
    "install:fresh": "pnpm run clean:cache && pnpm install",
    "deploy": "./scripts/deploy/deploy.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "analyze": "pnpm --filter @hallyu/frontend build:analyze",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lerna": "^8.0.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.10",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@shopify/shopify-api": "^11.13.0",
    "api": "^6.1.3",
    "async-retry": "^1.3.3",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "compression": "^1.8.0",
    "console-table-printer": "^2.14.6",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "data-fns": "^1.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.6.1",
    "json2csv": "6.0.0-alpha.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "rate-limiter-flexible": "^7.1.1",
    "shopify": "^3.82.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "string-similarity": "^4.0.4",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.5"
  }
}
